# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{java, aidl}]
charset = utf-8
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 2

[README.md]
indent_style = space
indent_size = 4

[vimrc]
indent_style = space
indent_size = 2

[zshrc]
indent_style = space
indent_size = 4

