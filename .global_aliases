# if (( !isdarwin )) ; then
if [ "$OSTYPE" != "darwin11.0" ] ; then
	alias ls='ls --color=auto'
fi

alias ..='cd ..'
alias ll='ls -Glh'
alias la='ls -GAlh'
# alias l='ls -CF --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias top='top -o cpu -n 30'

## Aenderungen bei allen angegebenen Logdateien live anzeigen:
alias mylogs='sudo tail -f /var/log/{system.log,secure.log}' 

## Die oeffentliche IP ausgeben:
alias myip="wget -qO - http://checkip.dyndns.org | sed 's/[a-zA-Z<>/ :]//g'" 

## ssh aliases
alias tunnel_hs_server="ssh -v -2 -N -D7070 vserver_proxy"
alias tunnel_server="ssh -v -2 -N -D7070 84.38.68.7"

## command aliases
alias x='exit'
alias c='clear'
alias s='screen'
alias r='screen -R'
alias vi='vim'
alias sls='screen -ls'
alias zrc='vim ~/.zshrc'
alias e='smartextract'
alias o='open'
alias fif='find . -type f \( -name "*.c*" -o -name "*.h" \) -print | xargs grep -in'
alias loc='find . -type f \( -name "*.c" -o -name "*.h" -o -name "*.py" -o -name "*.sh" \) -print | xargs cat | wc -l'
# alias gitcommitcrap='git commit -m "`curl -s 'http://whatthecommit.com/' | grep '<p>' | cut -c4-`"'
alias pg_stop='sudo -u postgres /Library/PostgreSQL/9.0/bin/pg_ctl stop -D /Library/PostgreSQL/9.0/data'
