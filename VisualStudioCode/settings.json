{
  "editor.fontFamily": "Fira Code",
  "editor.renderWhitespace": "boundary",
  "editor.cursorStyle": "line",
  "editor.rulers": [120],
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },

  "terminal.external.osxExec": "iTerm.app",
  "git.autofetch": true,
  "workbench.iconTheme": "material-icon-theme",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.defaultFormatter": "EditorConfig.EditorConfig",
  "vscode-neovim.neovimExecutablePaths.darwin": "/usr/local/bin/nvim",
  "vscode-neovim.neovimInitVimPaths.darwin": "$HOME/.vim/init.lua",

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[dart]": {
    "editor.formatOnType": true,
    "editor.rulers": [80],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false
  },
  "git.countBadge": "tracked",
  "git.defaultCloneDirectory": "$HOME/Developer",
  "gitlens.menus": {
    "editor": {
      "blame": false,
      "clipboard": true,
      "compare": true,
      "details": false,
      "history": false,
      "remote": false
    },
    "editorGroup": false,
    "editorTab": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "explorer": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "scmGroup": {
      "compare": true,
      "openClose": true,
      "stash": true,
      "stashInline": true
    },
    "scmItem": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true,
      "stash": true
    }
  },
  "eslint.validate": ["javascript", "html", "markdown"],
  "angular.experimental-ivy": true,
  "workbench.editor.decorations.badges": true,
  "editor.minimap.enabled": false,
  "vim.enableNeovim": true,
  "vim.neovimUseConfigFile": true,
  "vim.leader": " ",
  "vim.neovimConfigPath": "~/.config/nvim/init.lua",
  "vim.neovimPath": "/usr/local/bin/nvim",
  "editor.renderIndentGuides": true,
  "files.insertFinalNewline": true,
  "editor.fontSize": 11,
  "files.hotExit": "off",
  "editor.scrollBeyondLastLine": true,
  "editor.mouseWheelScrollSensitivity": 3,
  "window.title": "${activeEditorShort}${separator}${rootName}",
  "editor.tabSize": 4,
  "files.trimTrailingWhitespace": true,
  "editor.wordWrap": "on",
  "editor.formatOnPaste": true,
  "editor.snippetSuggestions": "top",
  "terminal.integrated.tabs.enabled": true,
  "redhat.telemetry.enabled": false,
  "files.exclude": {
    "**/.git": false,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "window.autoDetectColorScheme": true,
  "workbench.fontAliasing": "auto",
  "workbench.editor.wrapTabs": true,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.pinnedTabSizing": "compact",
  "todo-tree.general.statusBar": "current file",
  "todo-tree.highlights.useColourScheme": true,
  "python.defaultInterpreterPath": "$HOME/.pyenv/shims/python",
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]"
  ],
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  "workbench.colorTheme": "Default Light+",
  "terminal.integrated.profiles.osx": {
    "bash": {
      "path": "bash",
      "args": ["-l"],
      "icon": "terminal-bash"
    },
    "zsh": {
      "path": "zsh",
      "args": ["-l"]
    },
    "fish": {
      "path": "fish",
      "args": ["-l"]
    },
    "tmux": {
      "path": "tmux",
      "icon": "terminal-tmux"
    },
    "pwsh": {
      "path": "pwsh",
      "icon": "terminal-powershell"
    },
    "zsh (2)": {
      "path": "/usr/local/bin/zsh"
    }
  },
  "[python]": {
    "gitlens.codeLens.symbolScopes": ["!Module"],
    "editor.wordBasedSuggestions": false
  },
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.automationShell.osx": "zsh"
}
