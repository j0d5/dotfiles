{
  "window.openFilesInNewWindow": "default",
  "window.title": "${activeEditorShort}${separator}${rootName}",
  "window.autoDetectColorScheme": true,

  // Editor settings
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.defaultFormatter": "EditorConfig.EditorConfig",
  "editor.fontFamily": "JetBrains Mono",
  "editor.renderWhitespace": "boundary",
  "editor.cursorStyle": "line",
  "editor.rulers": [120],
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  "editor.minimap.enabled": false,
  "editor.scrollBeyondLastLine": true,
  "editor.mouseWheelScrollSensitivity": 3,
  "editor.tabSize": 4,
  "editor.wordWrap": "on",
  "editor.formatOnPaste": true,
  "editor.suggest.showReferences": false,
  "editor.guides.bracketPairs": true,
  "editor.wordWrapColumn": 120,
  "editor.bracketPairColorization.enabled": true,
  "editor.suggestSelection": "recentlyUsed",
  "editor.hover.delay": 1000,

  // Workbench settings
  "workbench.editor.wrapTabs": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.editor.decorations.badges": true,
  "workbench.fontAliasing": "auto",

  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.tabs.enabled": true,

  "files.hotExit": "off",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    ".git": true,
    ".idea": true,
    "**/.classpath": true,
    "**/.factorypath": true,
    "**/.git": false,
    "**/.project": true,
    "**/.settings": true
  },

  "vscode-neovim.neovimExecutablePaths.darwin": "/usr/local/bin/nvim",
  "vscode-neovim.neovimInitVimPaths.darwin": "$HOME/.vim/init.lua",

  "git.autofetch": true,
  "git.countBadge": "tracked",
  "git.defaultCloneDirectory": "$HOME/Developer",

  "gitlens.fileAnnotations.command": "changes",
  "gitlens.integrations.enabled": true,
  "gitlens.menus": {
    "editor": {
      "blame": false,
      "clipboard": true,
      "compare": true,
      "details": false,
      "history": false,
      "remote": false
    },
    "editorGroup": false,
    "editorTab": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "explorer": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "scmGroup": {
      "compare": true,
      "openClose": true,
      "stash": true,
      "stashInline": true
    },
    "scmItem": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true,
      "stash": true
    }
  },

  "eslint.validate": ["javascript", "html", "markdown"],

  "vim.enableNeovim": true,
  "vim.neovimUseConfigFile": true,
  "vim.leader": " ",
  "vim.neovimConfigPath": "~/.config/nvim/init.lua",
  "vim.neovimPath": "/usr/local/bin/nvim",

  "redhat.telemetry.enabled": false,

  // Python
  "python.defaultInterpreterPath": "/usr/local/bin/python3",

  // JavaScript
  "javascript.inlayHints.enumMemberValues.enabled": true,
  "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
  "javascript.inlayHints.parameterTypes.enabled": true,
  "javascript.inlayHints.variableTypes.enabled": true,
  "javascript.suggest.completeFunctionCalls": true,
  "javascript.inlayHints.propertyDeclarationTypes.enabled": true,
  // TypeScript
  "typescript.referencesCodeLens.showOnAllFunctions": true,
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.variableTypes.enabled": true,

  // TODO Tree
  "todo-tree.general.statusBar": "current file",
  "todo-tree.highlights.useColourScheme": true,
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]",
    "IDEA"
  ],
  "todo-tree.highlights.customHighlight": {
    "IDEA": {
      "type": "tag",
      "foreground": "blue",
      "iconColour": "blue",
      "background": "#00000000",
      "gutterIcon": false
    }
  },

  "terminal.integrated.profiles.osx": {
    "bash": {
      "path": "bash",
      "args": ["-l"],
      "icon": "terminal-bash"
    },
    "zsh": {
      "path": "/usr/local/bin/zsh",
      "args": ["-l"]
    },
    "fish": {
      "path": "fish",
      "args": ["-l"]
    },
    "tmux": {
      "path": "tmux",
      "icon": "terminal-tmux"
    },
    "pwsh": {
      "path": "pwsh",
      "icon": "terminal-powershell"
    }
  },

  "[python]": {
    "gitlens.codeLens.symbolScopes": ["!Module"],
    "editor.wordBasedSuggestions": false,
    "editor.defaultFormatter": "ms-python.python"
  },

  "[typescript][javascript][html][scss][jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[dart]": {
    "editor.formatOnType": true,
    "editor.rulers": [80],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false
  },

  "sonarlint.connectedMode.connections.sonarqube": [
    {
      "connectionId": "mySonar",
      "serverUrl": "https://sonarqube.core.build.vwn.cloud",
      "token": "a04facb530d42a6123b78cca3f41360425978db1"
    }
  ],

  "dart.flutterSdkPath": ".fvm/flutter_sdk",
  // Remove .fvm files from search
  "search.exclude": {
    "**/.fvm": true
  },
  // Remove from file watching
  "files.watcherExclude": {
    "**/.fvm": true
  },

  "yaml.schemas": {
    "file:///Users/johannes/.vscode/extensions/atlassian.atlascode-2.10.3/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
  }
}
