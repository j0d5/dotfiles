# Configuration
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config secondsBetweenRepeat 0.1
config checkDefaultsOnLoad true
config focusCheckWidthMax 3000
config windowHintsShowIcons true
config windowHintsIgnoreHiddenWindows false
#config windowHintsDuration 5
config windowHintsSpread true
#config windowHintsOrder persist

# Monitor Aliases
alias mon-laptop      2
alias mon-extern1     1
alias mon-extern2     0

# Position aliases

## Abstract positions
alias moveto    move screenOriginX;screenOriginY screenOriginX;screenOriginY
alias full      move screenOriginX;screenOriginY screenSizeX;screenSizeY
alias lefthalf  move screenOriginX;screenOriginY screenSizeX/2;screenSizeY
alias leftthird move screenOriginX;screenOriginY screenSizeX/3*2;screenSizeY
alias left75    move screenOriginX;screenOriginY screenSizeX*0.75;screenSizeY
alias left90    move screenOriginX;screenOriginY screenSizeX*0.90;screenSizeY
alias righthalf move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY
alias topleft corner top-left resize:screenSizeX/2;screenSizeY/2
alias topright corner top-right resize:screenSizeX/2;screenSizeY/2
alias bottomleft corner bottom-left resize:screenSizeX/2;screenSizeY/2
alias bottomright corner bottom-right resize:screenSizeX/2;screenSizeY/2
alias tweetbotpos corner bottom-right

## Concrete positions
alias 0-to0   ${moveto}    ${mon-laptop}
alias 0-full  ${full}      ${mon-laptop}
alias 0-left  ${lefthalf}  ${mon-laptop}
alias 0-right ${righthalf} ${mon-laptop}

alias 1-to1   ${moveto}    ${mon-extern1}
alias 1-full  ${full}      ${mon-extern1}
alias 1-left  ${lefthalf}  ${mon-extern1}
alias 1-right ${righthalf} ${mon-extern1}
alias 1-righttop    move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY/2 ${mon-extern1}
alias 1-rightbottom move screenOriginX+screenSizeX/2;screenOriginY+screenSizeY/2 screenSizeX/2;screenSizeY/2 ${mon-extern1}

alias 2-to2         ${moveto}    ${mon-extern2}
alias 2-full        ${full}      ${mon-extern2}
alias 2-left        ${lefthalf}  ${mon-extern2}
alias 2-left75      ${left75}    ${mon-extern2}
alias 2-left90      ${left90}    ${mon-extern2}
alias 2-toleftthird ${leftthird} ${mon-extern2}
alias 2-right       ${righthalf} ${mon-extern2}
alias 2-righttop    move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY/2 ${mon-extern2}
alias 2-rightbottom move screenOriginX+screenSizeX/2;screenOriginY+screenSizeY/2 screenSizeX/2;screenSizeY/2 ${mon-extern2}

# Layouts
layout 1monitor 'Safari':REPEAT    ${left90}
layout 1monitor 'Mail':MAIN_FIRST  ${full}
layout 1monitor 'OmniFocus':REPEAT ${full}
layout 1monitor 'Xcode':REPEAT     ${full}
layout 1monitor 'Eclipse':REPEAT   ${full}
layout 1monitor 'Monitor':REPEAT   ${full}
layout 1monitor 'Tweetbot':MAIN_FIRST   ${tweetbotpos}

layout 2monitor 'Eclipse':REPEAT   ${0-full}

layout 3monitor 'PathFinder':REPEAT     ${1-to1}
layout 3monitor 'Eclipse':REPEAT        ${1-full}
layout 3monitor 'Xcode':REPEAT          ${1-full}
layout 3monitor 'Safari':REPEAT         ${2-left90}
layout 3monitor 'SourceTree':REPEAT     ${2-left90}
layout 3monitor 'mySPIN_IVI_OSX':REPEAT ${2-to2}
layout 3monitor 'Tweetbot':MAIN_FIRST   ${tweetbotpos} ${mon-extern2}
layout 3monitor 'Mail':MAIN_FIRST           ${0-full}
layout 3monitor 'OmniFocus':MAIN_FIRST      ${0-full}
layout 3monitor 'Spotify':MAIN_FIRST        ${0-full}

## Default Layouts
default 3monitors resolutions:${mon-extern1};${mon-extern2};${mon-laptop};
default 2monitors resolutions:${mon-laptop};${mon-extern1};
default 1monitor  resolutions:${mon-laptop}

# Key bindings

## HYPER binding
alias hyper ctrl;shift;alt;cmd

bind left:ctrl;cmd  ${lefthalf}
bind right:ctrl;cmd ${righthalf}
bind up:ctrl;cmd    ${full}

bind 1:${hyper} layout 1monitor
bind 2:${hyper} layout 1monitor
bind 3:${hyper} layout 3monitor

bind n:${hyper}     throw next
bind right:${hyper} throw right resize
bind left:${hyper}  throw left  resize
bind f:${hyper}     throw 1 resize
bind g:${hyper}     throw 0 resize

bind r:${hyper} relaunch
bind z:${hyper} undo
bind g:${hyper} grid padding:5 0:6,4 1:6,4 2:6,4
