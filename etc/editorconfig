# EditorConfig is awesome: http://EditorConfig.org
#
# Author of this file: tweetjay <tweetjay2@gmail.com>
# Last modified date: 04.03.2016
#

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Matches multiple files with brace expansion notation
# Set default charset
[*.{java, aidl, c, cpp, cs}]
charset = utf-8
indent_style = space
indent_size = 2

[*.{swift, m, h}]
charset = utf-8
indent_style = space
indent_size = 4

[{.gitattributes,.gitignore,.gitmodules}]
indent_style = tab

[Makefile]
indent_style = tab
indent_size = 2

[*.{md, pu}]
indent_style = space
indent_size = 4

[vimrc]
indent_style = space
indent_size = 2

[zshrc]
indent_style = space
indent_size = 2

