general {
  border = 1
  snap = 8
  resize_hints = true
  focus_move_pointer = false
  allow_lower_floats = false
  new_become_master = true
  new_get_focus = true
  font = "gelly-8"
}
colors {
  normal_border = "#000000"
  normal_bg = "#000000"
  normal_fg = "#ffffff"
  focus_border = "#e71b3c"
  focus_bg = "#000000"
  focus_fg = "#e71b3c"
}
tags { 
  tag term    {layout = "tile"} 
  tag firefox {layout = "max"} 
  tag max     {layout = "max"} 
  tag floats  {layout = "floating"}
}
keys {
  key {
	modkey = {"Mod4"}
	key = "i"
	command = "spawn"
	arg = "exec firefox"
  }
}

